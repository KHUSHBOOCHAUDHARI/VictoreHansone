<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar

        android:visibility="gone"
        android:id="@+id/toolbarlyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/bg_botom_round">
        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/ic_sidemenu">

            </ImageView>

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toEndOf="@+id/menu"
                android:fontFamily="@font/overpass_regular"
                android:text="@string/welcome_dashboard_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"></TextView>

        <ImageView

            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:id="@+id/notification_icon"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:background="@drawable/notificatin">

        </ImageView>

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_19sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toStartOf="@+id/notification_icon"
                android:background="@drawable/filter">

            </ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarlyt"
        android:fillViewport="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            android:id="@+id/account_balance_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/overpass_regular"
            android:text="@string/account_balance_txt"
            android:textColor="@color/headline"
            android:textSize="@dimen/_12sdp"></TextView>

        <TextView
            android:id="@+id/account_balance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_balance_lable"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"


            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18sdp"></TextView>
    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/account_balance_txt"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/totalinterest_lable"
                android:layout_below="@+id/toolbarlyt"
                android:text="@string/interested_paid_txt"
                android:textColor="@color/headline"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/overpass_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/toalinterest_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_balance_lable"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/overpass_regular"
                android:textSize="@dimen/_12sdp"


                android:textColor="@color/white"></TextView>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/accrued_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/accrued_lable"
                android:layout_below="@+id/toolbarlyt"
                android:text="@string/wallet_txt"
                android:textColor="@color/headline"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/overpass_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/accrued_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_balance_lable"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/overpass_regular"
                android:textSize="@dimen/_12sdp"


                android:textColor="@color/white"></TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:background="@drawable/bg_btn_border_back"
            android:id="@+id/addfund_lyt"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/addfund_logo"
              android:background="@drawable/plushround"

                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">
            </ImageView>

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:id="@+id/addfund_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_balance_lable"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/overpass_regular"
                android:textSize="@dimen/_12sdp"

                android:text="@string/add_fund_txt"
                android:textColor="@color/white"></TextView>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_btn_border_back"
            android:id="@+id/withdrow_lyt"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/withdrow_logo"
                android:background="@drawable/ic_with"

                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">
            </ImageView>

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:id="@+id/withdrow_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_balance_lable"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/overpass_regular"
                android:textSize="@dimen/_12sdp"

                android:text="@string/withdraw_txt"
                android:textColor="@color/white"></TextView>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/thirdlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@id/secondLayout"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/bg_btn_border_back"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chain_logo"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/userchain"
            android:padding="@dimen/_4sdp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_toEndOf="@+id/chain_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earn via Referral"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"></TextView>


            <TextView
                android:id="@+id/inverstTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/overpass_regular"
                android:text=""
                android:textColor="@color/headline"
                android:textSize="@dimen/_9sdp"></TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/start_logo"

            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_right"
            android:padding="@dimen/_3sdp"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/thirdlayout"
        android:id="@+id/fourthLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tran_history_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/overpass_bold"
            android:text="@string/transaction_history_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>

        <TextView
            android:id="@+id/tran_historylis_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/overpass_bold"
            android:text="Show All History"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"></TextView>

      <LinearLayout
          android:layout_below="@+id/tran_history_txt"
                android:id="@+id/linearLayout_home_adapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                >


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tansectionRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_marginTop="5dp" />


          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/filterRecyclerview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginStart="5dp"
              android:paddingBottom="@dimen/_10sdp"
              android:layout_marginTop="5dp" />




      </LinearLayout>




        <TextView
            android:textColor="@color/headline"
            android:id="@+id/textView_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tran_history_txt"
          android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/overpass_italic"
            android:text="No Transaction yet made to display."
            android:visibility="gone"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:src="@drawable/filter" />


        <ProgressBar

            android:id="@+id/progressbar_loadmore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />


        <TextView
            android:id="@+id/text_keyword_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:visibility="gone"
            android:textSize="18sp"
            android:textStyle="bold" />








    </RelativeLayout>


        </RelativeLayout>







    </androidx.core.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimaryDark"
        />



</RelativeLayout>
</layout>