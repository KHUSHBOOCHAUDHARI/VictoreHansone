<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:background="@color/backgroundcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

   <RelativeLayout
       android:background="@color/backgroundcolor"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:background="@drawable/ic_rectangle_6188"
          android:theme="@style/AppTheme.AppBarOverlay"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="@dimen/_40sdp"
             android:layout_marginBottom="@dimen/_10sdp"
             android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/kk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">


               <ImageView
                   android:id="@+id/menu"
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_15sdp"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:background="@drawable/ic_sidemenu"
                   android:onClick="openCloseNavigationDrawer"
                   android:visibility="visible">

               </ImageView>


               <TextView
                   android:id="@+id/appname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="14dp"
                   android:layout_marginLeft="30dp"
                   android:layout_toEndOf="@+id/menu"
                   android:fontFamily="@font/rubik_regular"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_14sdp"
                   android:textStyle="bold" />

               <ImageView

                   android:id="@+id/notification_icon"
                   android:layout_width="@dimen/_16sdp"
                   android:layout_height="@dimen/_16sdp"
                   android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/_10sdp"
                   android:background="@drawable/notificatin"
                   android:backgroundTint="@color/white">

               </ImageView>

               <ImageView
                   android:id="@+id/filter"
                   android:layout_width="@dimen/_16sdp"
                   android:layout_height="@dimen/_19sdp"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/_10sdp"
                   android:layout_toStartOf="@+id/notification_icon"
                   android:background="@drawable/filter"
                   android:visibility="gone">

               </ImageView>

            </RelativeLayout>



            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/account_balance_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"


                android:fontFamily="@font/rubik_regular"
                android:text="@string/account_balance_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"></TextView>

            <TextView
                android:id="@+id/account_balance_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_balance_lable"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:text="fjsddsghfvadsh"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"></TextView>



            <RelativeLayout

                android:id="@+id/selctedrecy"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:visibility="visible"

                android:weightSum="5"


                >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:background="@color/transparent">


                  <RelativeLayout
                      android:clickable="true"
                      android:foreground="?android:attr/selectableItemBackground"
                      android:id="@+id/send_lyt"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_marginRight="@dimen/_5sdp"
                      android:layout_weight="1"


                      android:background="@drawable/bg_btn_border_white_place"

                      android:orientation="vertical">

                     <ImageView
                         android:id="@+id/send_logo"
                         android:layout_width="@dimen/_30sdp"
                         android:layout_height="@dimen/_30sdp"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/_5sdp"
                         android:src="@drawable/sendhome" />

                     <TextView
                         android:id="@+id/send_txt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/_10sdp"
                         android:layout_marginTop="3dp"
                         android:layout_toEndOf="@+id/send_logo"
                         android:text="@string/send_text"
                         android:textColor="@color/black"
                         android:textSize="@dimen/_12sdp" />


                  </RelativeLayout>

                  <RelativeLayout
                      android:clickable="true"
                      android:foreground="?android:attr/selectableItemBackground"
                      android:id="@+id/received_lyt"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="@dimen/_5sdp"
                      android:layout_weight="1"


                      android:background="@drawable/bg_btn_border_white_place"

                      android:orientation="vertical">

                     <ImageView
                         android:id="@+id/received_logo"
                         android:layout_width="@dimen/_30sdp"
                         android:layout_height="@dimen/_30sdp"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/_5sdp"
                         android:src="@drawable/receivedhome" />

                     <TextView
                         android:id="@+id/received_txt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/_10sdp"
                         android:layout_marginTop="3dp"
                         android:layout_toEndOf="@+id/received_logo"
                         android:text="@string/receive_txt"
                         android:textColor="@color/black"
                         android:textSize="@dimen/_12sdp" />


                  </RelativeLayout>
               </LinearLayout>
            </RelativeLayout>
         </LinearLayout>
      </androidx.appcompat.widget.Toolbar>

      <FrameLayout
          android:id="@+id/container"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/toolbar_main"
          android:background="@color/transparent"
          android:paddingBottom="@dimen/_50sdp" />

      <View
          android:id="@+id/view_home_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="60dp"
          android:visibility="gone"
          />

      <RelativeLayout
          android:layout_height="80dp"
          android:layout_alignParentBottom="true"

          android:visibility="visible"
          android:background="@color/colorPrimaryDark"
          android:layout_width="match_parent"


          >

         <RelativeLayout

             android:id="@+id/toolbarlyt"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerVertical="true"
             android:backgroundTint="@color/transparent"
             android:weightSum="5">

            <LinearLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
               <LinearLayout
                   android:id="@+id/wallet_lyout"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"

                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:visibility="visible">

                  <ImageView
                      android:scaleType="centerCrop"
                      android:id="@+id/wallet_logo"
                      android:layout_width="@dimen/_22sdp"
                      android:layout_height="@dimen/_22sdp"
                      android:src="@drawable/ic__wallet"
                      app:tint="@color/white" />

                  <TextView

                      android:id="@+id/wallet_txt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="@string/wallet_txt"
                      android:textColor="@color/white"
                      android:textSize="12sp" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/history_lyt"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"

                   android:layout_weight="1"

                   android:gravity="center"
                   android:orientation="vertical"
                   android:visibility="visible">

                  <ImageView
                      android:id="@+id/history_logo"
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="@dimen/_20sdp"
                      android:src="@drawable/history"
                      app:tint="@color/white" />

                  <TextView
                      android:id="@+id/history_txt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="@string/history_txt"
                      android:textColor="@color/white"
                      android:textSize="12sp" />

               </LinearLayout>


               <LinearLayout

                   android:id="@+id/add_fund_lyt"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:visibility="gone">

                  <ImageView
                      android:layout_marginTop="@dimen/_2sdp"
                      android:id="@+id/add_fubd_logo"
                      android:layout_width="@dimen/_36sdp"
                      android:layout_height="@dimen/_36sdp"
                      android:src="@drawable/ic_addfund"
                      app:tint="@color/white" />

                  <TextView
                      android:layout_marginBottom="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:id="@+id/add_fund_txt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:text="@string/add_fund_txt"
                      android:textColor="@color/white"
                      android:textSize="14sp" />

               </LinearLayout>


               <LinearLayout
                   android:id="@+id/withdraw_lyt"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"

                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/withdraw_logo"
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="@dimen/_20sdp"
                      android:src="@drawable/send"
                      app:tint="@color/white" />

                  <TextView
                      android:id="@+id/withdraw_txt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="@string/send_text"
                      android:textColor="@color/white"
                      android:textSize="12sp" />


               </LinearLayout>

               <LinearLayout
                   android:id="@+id/profile_lyt"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"

                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/profile_logo"
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="@dimen/_20sdp"
                      android:src="@drawable/receive"
                      app:tint="@color/white" />

                  <TextView
                      android:id="@+id/profile_txt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="@string/receive_txt"
                      android:textColor="@color/white"
                      android:textSize="12sp" />


               </LinearLayout>
            </LinearLayout>

         </RelativeLayout>


      </RelativeLayout>


      <ProgressBar
          android:id="@+id/progressBar"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:visibility="gone"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true" />

   </RelativeLayout>

   <com.google.android.material.navigation.NavigationView

       android:id="@+id/nav_view"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_gravity="start"

       android:background="@color/navigation_drawer"
       android:fitsSystemWindows="true"
      android:visibility="visible"
       app:itemTextColor="@drawable/selector"
       app:menu="@menu/activity_main_drawer">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:orientation="vertical">

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/view_scd" />

         <LinearLayout
             android:id="@+id/linearLayout_main"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:visibility="gone"
             android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/status_saver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/status_saver"
                   android:textSize="14sp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/manage_status"
                   android:textSize="10sp"
                   android:textStyle="bold" />

            </LinearLayout>

         </LinearLayout>

      </LinearLayout>

   </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
</layout>