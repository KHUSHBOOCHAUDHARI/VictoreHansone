<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Activity.PaymentSettingActivity">
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbarlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_botom_round">
        <LinearLayout
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout

                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/toolbarrecy"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/ic_back">

                </ImageView>

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/menu"
                    android:fontFamily="@font/overpass_regular"
                    android:text="@string/payment_setting_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"></TextView>


            </RelativeLayout>

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/toolbarlyt"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/kkk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarlyt"

        android:orientation="vertical"
        android:visibility="visible">


        <RadioGroup
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">

            <RadioButton

                android:buttonTint="@color/white"
                android:id="@+id/cash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="  Cash"
                android:checked="true"
                android:layout_marginTop="10dp"
                android:onClick="onRadioButtonClicked"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <RadioButton

               android:layout_marginLeft="@dimen/_60sdp"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:id="@+id/bank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="   Bank Transfer"
                android:layout_marginTop="10dp"
                android:onClick="onRadioButtonClicked"

                android:textSize="@dimen/_12sdp" />
        </RadioGroup>


        <RelativeLayout

            android:id="@+id/bankdetail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/banknumber_lyt"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">

                <EditText

                    android:id="@+id/banknumber_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:hint="Bank Account Number"
                    android:inputType="number"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightwhite"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp">

                </EditText>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ifsc_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banknumber_lyt"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">

                <EditText
                    android:id="@+id/ifsc_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:hint="Enter your IFSC code"
                    android:inputType="textCapCharacters"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightwhite"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp">

                </EditText>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/branchname_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ifsc_lyt"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">

                <EditText

                    android:id="@+id/branchname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:hint="Bank Name"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightwhite"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp">

                </EditText>


            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/cash_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/name_lyt"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">

                <EditText

                    android:id="@+id/name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:hint="Full Name"

                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightwhite"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp">

                </EditText>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contact_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_lyt"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="2dp"
                    app:ccpDialog_showNameCode="false"
                    app:ccp_contentColor="@color/white"
                    app:ccp_countryPreference="us,in"
                    app:ccp_hidePhoneCode="true"
                    app:ccp_textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/contact_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/ccp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:hint="Contact Number"
                    android:inputType="number"

                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightwhite"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp">

                </EditText>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/city_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_lyt"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">

                <EditText

                    android:id="@+id/city_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:hint="City/Country"

                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightwhite"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp">

                </EditText>


            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgetpassword_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient_history"
            android:fontFamily="@font/overpass_semibold"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Save"
            android:textAlignment="center"

            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"></TextView>


    </LinearLayout>
    </ScrollView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimaryDark"
        />
</RelativeLayout>


</layout>