<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#99000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/bg_btn_border_back"
        android:backgroundTint="@color/white"
        >

        <RelativeLayout

            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/main_lyt"

                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/document"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/notificatin"
                    android:visibility="gone">

                </ImageView>


                <RelativeLayout
                    android:id="@+id/paymentop_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/document"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/paymentop_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Payment Option:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"></TextView>

                    <TextView
                        android:id="@+id/paymentop_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:layout_toEndOf="@+id/paymentop_tag"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/totallayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/paymentop_layout"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/created_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Created Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <TextView
                        android:id="@+id/created_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/totlaamountlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/totallayout"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/totlaamount_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Total Amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <TextView
                        android:id="@+id/totlaamount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cancelationlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/totlaamountlayout"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/cancelation_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Cancelation Charge"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <TextView
                        android:id="@+id/cancelation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/cryptotypelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cancelationlayout"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/cryptotype_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Crypto Type Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <TextView
                        android:id="@+id/cryptotype_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/protocollayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cryptotypelayout"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/protocol_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Protocol Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <TextView
                        android:id="@+id/protocol_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cryptoaddresslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/protocollayout"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/cryptoaddress_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Crypto Address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>

                    <TextView
                        android:id="@+id/cryptoaddress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/cryptoaddress_tag"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible"></TextView>

                    <TextView
                        android:id="@+id/bankname"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:layout_marginRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible"></TextView>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/declineMessagelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cryptoaddresslayout"
                    android:layout_marginTop="@dimen/_5sdp"

                    >

                    <TextView
                        android:id="@+id/decline_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Decline Message"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"></TextView>


                    <TextView

                        android:id="@+id/decline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:layout_toEndOf="@+id/decline_tag"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible"></TextView>

                </RelativeLayout>


            </RelativeLayout>


            <ProgressBar
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible"
                android:id="@+id/progressBardialog"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"

                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:indeterminateDrawable="@drawable/loder"
                />
            <TextView
                android:id="@+id/nodata"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:text="No Data Found"
                android:visibility="gone"></TextView>




        </RelativeLayout>



    </RelativeLayout>




</LinearLayout>
