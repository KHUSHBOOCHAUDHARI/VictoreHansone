<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Activity.ReferralActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_botom_round">
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/toolbarrecy"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/ic_back">

                    </ImageView>

                    <TextView
                        android:id="@+id/title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/menu"
                        android:fontFamily="@font/overpass_regular"
                        android:text="@string/confiram_detail_txt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"></TextView>

                    <ImageView

                        android:id="@+id/notification_icon"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/notificatin">

                    </ImageView>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/notification_icon"
                        android:background="@drawable/filter">

                    </ImageView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/first_lyt"
                    android:layout_below="@+id/toolbarrecy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/account_balance_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/overpass_regular"
                        android:text="@string/account_balance_txt"
                        android:textColor="@color/headline"
                        android:textSize="@dimen/_12sdp"></TextView>

                    <TextView
                        android:id="@+id/account_balance_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/account_balance_lable"

                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="@string/account_balance_txt"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_18sdp"></TextView>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/totalreferal_lable"
                            android:layout_below="@+id/toolbarlyt"
                            android:text="@string/interested_paid_balance"
                            android:textColor="@color/headline"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/overpass_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                        <TextView
                            android:layout_gravity="end"
                            android:id="@+id/toalreferal_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/account_balance_lable"

                            android:fontFamily="@font/overpass_regular"
                            android:textSize="@dimen/_12sdp"

                            android:text="@string/account_balance_txt"
                            android:textColor="@color/white"></TextView>

                    </LinearLayout>



                </RelativeLayout>
            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_below="@+id/toolbarlyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/baseaccount_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/baseaccount_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_semibold"
                        android:text="@string/payment_confirmation_txt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp">

                    </TextView>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/baseaccount_tag"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radiotxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="4dp"
                            android:buttonTint="@color/colorPrimaryDark"
                            android:checked="true"
                            android:fontFamily="@font/overpass_light"
                            android:layoutDirection="ltr"
                            android:text="Monthly Payment"
                            android:textAlignment="textStart"
                            android:textColor="@color/headline"
                            android:textSize="@dimen/_12sdp" />

                    </RadioGroup>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/billamount_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/interestpaid_tag"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/billamount_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="$270.00"
                        android:textColor="@color/headline"></TextView>

                    <TextView
                        android:id="@+id/billamount_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/overpass_regular"
                        android:text="@string/bill_amount_txt"
                        android:textColor="@color/headline"
                        android:textSize="@dimen/_12sdp">

                    </TextView>

                </RelativeLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/headline"
                    ></View>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/required_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/interestpaid_tag"

                    >

                    <TextView
                        android:id="@+id/required_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="$270.00"
                        android:textColor="@color/headline"></TextView>

                    <TextView
                        android:id="@+id/required_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/overpass_regular"
                        android:text="@string/required_bill_amount_txt"
                        android:textColor="@color/headline"
                        android:textColorHint="@color/headline"

                        android:textSize="@dimen/_12sdp">

                    </TextView>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbarlyt"
                    android:fontFamily="@font/overpass_semibold"
                    android:text="@string/select_payment_method_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp">

                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/payment_opt_recy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></androidx.recyclerview.widget.RecyclerView>


                <TextView

                    android:visibility="gone"

                    android:id="@+id/pdf_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/payment_opt_recy"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:background="@drawable/gradient_history"
                    android:fontFamily="@font/overpass_semibold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="Upload Document"

                    android:textSize="@dimen/_14sdp"></TextView>


                <TextView
                    android:visibility="visible"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/requerst_now_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pdf_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/gradient_history"
                    android:fontFamily="@font/overpass_semibold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="Next"
                    android:textAlignment="center"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"></TextView>
                <TextView

                    android:visibility="gone"
                    android:id="@+id/note_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/forgetpassword_txt"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/overpass_regular"
                    android:gravity="center"
                    android:text="@string/note"
                    android:textAlignment="center"
                    android:textColor="@color/headline"
                    android:textSize="@dimen/_10sdp"></TextView>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/addone"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"></ImageView>
                    <ImageView

                        android:background="@drawable/addtwo"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"></ImageView>
                    <ImageView

                        android:background="@drawable/addthree"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"></ImageView>


                </LinearLayout>

            </LinearLayout>



        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorPrimaryDark"
            />





    </RelativeLayout>

</layout>