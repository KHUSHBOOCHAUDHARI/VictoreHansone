<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity">
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbarlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <LinearLayout

            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/toolbarrecy"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/ic_back">

                </ImageView>

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/menu"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/setting_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"></TextView>


            </RelativeLayout>

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/customesetting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarlyt"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:background="@drawable/bg_btn_border_back"
        android:visibility="visible">


        <ImageView
            android:id="@+id/customesetting_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:background="@drawable/ic_baseline_chevron_right_24"
            android:backgroundTint="@color/black"></ImageView>

        <TextView

            android:id="@+id/customesetting_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/_40sdp"
            android:background="@null"
            android:backgroundTint="@color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:singleLine="true"
            android:text="@string/set_custom_font_txt"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@drawable/edit_corsor_color_gray"
            android:textSize="@dimen/_12sdp"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/layout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customesetting_layout"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:background="@drawable/bg_btn_border_back"
        android:visibility="visible">


        <ImageView
            android:id="@+id/layout_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:background="@drawable/ic_baseline_chevron_right_24"
            android:backgroundTint="@color/black"></ImageView>

        <TextView

            android:id="@+id/layout_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/_40sdp"
            android:background="@null"
            android:backgroundTint="@color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:singleLine="true"
            android:text="@string/layout_txt"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@drawable/edit_corsor_color_gray"
            android:textSize="@dimen/_12sdp"></TextView>
    </RelativeLayout>

