<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SettingActivity">
        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbarlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">
            <LinearLayout

                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/toolbarrecy"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/ic_back">

                    </ImageView>

                    <TextView
                        android:id="@+id/title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/menu"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/layout_txt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"></TextView>


                </RelativeLayout>

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/kkk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarlyt"

            android:orientation="vertical"
            android:visibility="visible">
        <RadioGroup
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">

            <RadioButton

                android:buttonTint="@color/black"
                android:id="@+id/cash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="  Linear"
                android:checked="true"
                android:layout_marginTop="10dp"
                android:onClick="onRadioButtonClicked"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_14sdp" />

            <RadioButton

                android:layout_marginLeft="@dimen/_60sdp"
                android:textColor="@color/black"
                android:buttonTint="@color/black"
                android:id="@+id/bank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="   Grid"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp"
                android:onClick="onRadioButtonClicked"

                android:textSize="@dimen/_14sdp" />
        </RadioGroup>

            <TextView
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtsizee"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_history"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/save_txt"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"></TextView>


        </LinearLayout>
    </RelativeLayout>
</layout>