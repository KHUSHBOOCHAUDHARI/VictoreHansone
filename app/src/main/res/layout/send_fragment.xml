<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundcolor"
        tools:context=".Activity.ReferralActivity">


        <RelativeLayout

            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/coin_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/baseaccount_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/enter_address_here_txt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

<!--                        <ImageView-->
<!--                            android:id="@+id/scanner"-->
<!--                            android:layout_width="@dimen/_22sdp"-->
<!--                            android:layout_height="@dimen/_22sdp"-->
<!--                            android:layout_marginLeft="@dimen/_10sdp"-->
<!--                            android:layout_toEndOf="@+id/baseaccount_tag"-->
<!--                            android:background="@drawable/ic_baseline_qr_code_scanner_24"-->
<!--                            android:backgroundTint="@color/black"></ImageView>-->


                        <RelativeLayout
                            android:id="@+id/coin_lytt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/baseaccount_tag"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_btn_border_back">

                            <ImageView
                                android:id="@+id/interes_logo"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/copy"
                                android:backgroundTint="@color/textcolor"></ImageView>

                            <ImageView
                                android:id="@+id/scanner"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/ic_baseline_qr_code_scanner_24"
                                android:backgroundTint="@color/black"
                                android:visibility="visible"></ImageView>

                            <EditText

                                android:id="@+id/address_txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"


                                android:layout_marginBottom="@dimen/_10sdp"

                                android:layout_toStartOf="@+id/scanner"
                                android:layout_toEndOf="@+id/interes_logo"
                                android:background="@null"
                                android:fontFamily="@font/rubik_regular"
                                android:hint="@string/enter_address_txt"
                                android:singleLine="true"
                                android:textColor="@color/headline"

                                android:textColorHint="@color/headline"
                                android:textCursorDrawable="@drawable/edit_corsor_color_gray"

                                android:textSize="@dimen/_12sdp">

                            </EditText>


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/baseaccount_exa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:background="@null"
                            android:fontFamily="@font/overpass_italic"

                            android:textColor="@color/white"
                            android:textColorHint="@color/headline"

                            android:textSize="@dimen/_10sdp">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout

                        android:id="@+id/amount_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbarlyt"
                        android:layout_marginTop="@dimen/_25sdp">

                        <TextView
                            android:id="@+id/amount_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:text="Enter Amount To Be Sent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <RelativeLayout
                            android:id="@+id/amount_lytt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/amount_tag"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_btn_border_back">

                            <ImageView
                                android:id="@+id/amount_logo"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/money"
                                android:backgroundTint="@color/textcolor"></ImageView>

                            <EditText
                                android:id="@+id/amount_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/amount_logo"
                                android:background="@null"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:fontFamily="@font/overpass_regular"
                                android:inputType="number"
                                android:hint="@string/enter_amount_txt"
                                android:singleLine="true"
                                android:textColor="@color/headline"
                                android:textColorHint="@color/headline"
                                android:textCursorDrawable="@drawable/edit_corsor_color_gray"

                                android:textSize="@dimen/_12sdp">

                            </EditText>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/termandcondition_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/amount_lytt"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/rubik_italic"
                            android:textSize="@dimen/_10sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/interestpaid_exa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/amount_lytt"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:background="@null"
                            android:fontFamily="@font/overpass_italic"

                            android:textColor="@color/white"
                            android:textColorHint="@color/headline"

                            android:textSize="@dimen/_10sdp">

                        </TextView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/cryptocurrancy_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/interestpaid_tag"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_btn_border_back"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/cryptocurrancy_logo"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/plus"></ImageView>

                        <TextView
                            android:id="@+id/cryptocurrancy_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"


                            android:background="@null"
                            android:fontFamily="@font/overpass_light"
                            android:text="@string/cryptocurrency_method_txt"
                            android:textColor="@color/headline"
                            android:textColorHint="@color/headline"

                            android:textSize="@dimen/_12sdp">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cash_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/interestpaid_tag"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_btn_border_back"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/cash_logo"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/plus"></ImageView>

                        <TextView
                            android:id="@+id/cash_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/overpass_light"
                            android:text="@string/cas_method_txt"
                            android:textColor="@color/headline"
                            android:textColorHint="@color/headline"

                            android:textSize="@dimen/_12sdp">

                        </TextView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/kkk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_btn_border_back"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/banktransfer_lyt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/tool_lyt">

                            <ImageView
                                android:id="@+id/banktransfer_logo"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/plus"></ImageView>

                            <ImageView
                                android:id="@+id/banktransferminus_logo"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_3sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/ic_minus"
                                android:backgroundTint="@color/headline"
                                android:visibility="gone"></ImageView>

                            <TextView
                                android:id="@+id/banktransfer_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@null"
                                android:fontFamily="@font/overpass_light"
                                android:text="@string/bank_transfer_txt"
                                android:textColor="@color/headline"
                                android:textColorHint="@color/headline"

                                android:textSize="@dimen/_12sdp">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bankdetail_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/banktransfer_lyt"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/banknumber_lyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="@dimen/_10sdp"

                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/bg_btn_border_back"
                                android:backgroundTint="#3A3A3A"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/banknumber_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/overpass_light"
                                    android:paddingTop="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:text="Bank Account Number"
                                    android:textColor="@color/headline"
                                    android:textColorHint="@color/headline"

                                    android:textSize="@dimen/_12sdp">

                                </EditText>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/ifsc_lyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/banknumber_lyt"
                                android:layout_marginLeft="@dimen/_10sdp"

                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/bg_btn_border_back"
                                android:backgroundTint="#3A3A3A"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/ifsc_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/overpass_light"
                                    android:paddingTop="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:text="Enter your IFSC code"
                                    android:textColor="@color/headline"
                                    android:textColorHint="@color/headline"

                                    android:textSize="@dimen/_12sdp">

                                </EditText>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/branchname_lyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ifsc_lyt"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"

                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/bg_btn_border_back"
                                android:backgroundTint="#3A3A3A"
                                android:visibility="visible">

                                <EditText

                                    android:id="@+id/branchname_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/overpass_light"
                                    android:paddingTop="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:text="Bank Name"
                                    android:textColor="@color/headline"
                                    android:textColorHint="@color/headline"

                                    android:textSize="@dimen/_12sdp">

                                </EditText>


                            </RelativeLayout>
                        </RelativeLayout>


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/save_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/forgetpassword_txt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/gradient_history"
                        android:fontFamily="@font/overpass_semibold"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Send Now"
                        android:textAlignment="center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"></TextView>

                    <TextView
                        android:id="@+id/note_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/forgetpassword_txt"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/overpass_regular"
                        android:gravity="center"
                        android:text="@string/note"
                        android:textAlignment="center"
                        android:textColor="@color/headline"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/addone"
                            android:backgroundTint="@color/headline"></ImageView>

                        <ImageView

                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:background="@drawable/addtwo"></ImageView>

                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:background="@drawable/addthree"
                            android:backgroundTint="@color/headline"></ImageView>


                    </LinearLayout>

                </LinearLayout>


            </ScrollView>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorPrimaryDark"
            />



    </RelativeLayout>
</layout>