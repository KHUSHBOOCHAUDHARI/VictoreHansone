<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/ic_userPinCardView"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:cardciew="http://schemas.android.com/apk/res-auto"
    cardciew:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    android:layout_marginTop="10dp"

    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_pro"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:layout_marginTop="10dp"
          />


        <RelativeLayout
            android:id="@+id/titlelyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageView_pro"
            android:orientation="horizontal">


            <TextView

                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"></TextView>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_8sdp"></TextView>

        </RelativeLayout>

        <TextView
            android:id="@+id/comment"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlelyt"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/poppins_light"
            android:textSize="@dimen/_10sdp">

        </TextView>

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Reply"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_10sdp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/reply"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/view_scd"
            android:backgroundTint="@color/view_scd"></View>


    </RelativeLayout>



</RelativeLayout>
