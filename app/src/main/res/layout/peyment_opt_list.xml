<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/cryptocurrancy_lyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_btn_border_back">

        <ImageView
            android:id="@+id/cryptocurrancypo_logo"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/plus"></ImageView>

        <ImageView

            android:id="@+id/cryptocurrancyme_logo"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/ic_minus"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"

            android:background="@null"
            android:fontFamily="@font/overpass_light"
            android:text="@string/cryptocurrency_method_txt"
            android:textColor="@color/headline"
            android:textColorHint="@color/headline"

            android:textSize="@dimen/_12sdp">

        </TextView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/layout_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cryptocurrancy_lyt"
        android:layout_marginTop="@dimen/_10sdp"></androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout

        android:visibility="gone"
        android:layout_below="@+id/cryptocurrancy_lyt"
        android:id="@+id/kkk"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_btn_border_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible"
            android:id="@+id/bankdetail_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:id="@+id/banknumber_lyt"

                android:visibility="visible"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/banknumber_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Bank Account Number"
                    android:textColor="@color/headline"
                    android:textColorHint="@color/headline"

                    android:textSize="@dimen/_12sdp">

                </TextView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_below="@+id/banknumber_lyt"
                android:id="@+id/ifsc_lyt"

                android:visibility="visible"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/ifsc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Enter your IFSC code"
                    android:textColor="@color/headline"
                    android:textColorHint="@color/headline"

                    android:textSize="@dimen/_12sdp">

                </TextView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_below="@+id/ifsc_lyt"
                android:id="@+id/branchname_lyt"

                android:visibility="visible"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:id="@+id/branchname_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Bank Name"
                    android:textColor="@color/headline"
                    android:textColorHint="@color/headline"

                    android:textSize="@dimen/_12sdp">

                </TextView>



            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_below="@+id/cryptocurrancy_lyt"
        android:id="@+id/coin_lyt"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_btn_border_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible"
            android:id="@+id/contact_person_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/contact_person_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">

                <TextView
                    android:id="@+id/contact_person_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:hint="Contact Person Name"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/headline"
                    android:textColorHint="@color/headline"

                    android:textSize="@dimen/_12sdp">

                </TextView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contact_number_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_person_lyt"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:visibility="visible">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    app:ccpDialog_showNameCode="false"
                    app:ccp_contentColor="@color/white"
                    app:ccp_countryPreference="in,us"
                    app:ccp_hidePhoneCode="true"

                    app:ccp_textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/contact_number_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:layout_toEndOf="@+id/ccp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Contact Number"
                    android:textColor="@color/headline"
                    android:textColorHint="@color/headline"

                    android:textSize="@dimen/_12sdp">

                </TextView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_below="@+id/contact_number_lyt"
                android:id="@+id/state_city_lyt"

                android:visibility="visible"
                android:background="@drawable/bg_btn_border_back"
                android:backgroundTint="#3A3A3A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:id="@+id/state_city_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/overpass_light"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="City/State"
                    android:textColor="@color/headline"
                    android:textColorHint="@color/headline"

                    android:textSize="@dimen/_12sdp">

                </TextView>



            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
