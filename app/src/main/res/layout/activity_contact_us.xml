<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".Activity.PaymentSettingActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_botom_round">
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/toolbarrecy"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/ic_back">

                    </ImageView>

                    <TextView
                        android:id="@+id/title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/menu"
                        android:fontFamily="@font/overpass_regular"
                        android:text="@string/contact_us_txt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"></TextView>


                </RelativeLayout>

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:fitsSystemWindows="true"
            android:layout_below="@+id/toolbarlyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/kkk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarlyt"


            android:orientation="vertical"
            android:visibility="visible">

            <TextView

                android:id="@+id/getstarted_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="@dimen/_15sdp"

                android:layout_marginRight="@dimen/_15sdp"

                android:fontFamily="@font/overpass_semibold"
                android:gravity="center"
                android:text="Please enter your contact details and admin will soon contact you"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"></TextView>
            <RelativeLayout
                android:id="@+id/bankdetail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banktransfer_lyt"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/banknumber_lyt"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/bg_btn_border_back"
                    android:backgroundTint="#3A3A3A"

                    android:visibility="visible">
                    <ImageView

                        android:id="@+id/firstname_logo"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/user"
                        android:backgroundTint="@color/headline"></ImageView>

                    <EditText
                        android:id="@+id/firstname_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/firstname_logo"
                        android:background="@null"
                        android:fontFamily="@font/overpass_regular"
                        android:hint="Enter your Name"
                        android:inputType="textCapSentences"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/lightwhite"
                        android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                        android:textSize="@dimen/_12sdp">

                    </EditText>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ifsc_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/banknumber_lyt"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/bg_btn_border_back"
                    android:backgroundTint="#3A3A3A"
                    android:visibility="visible">

                    <ImageView

                        android:id="@+id/email_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/emaill"
                        android:backgroundTint="@color/headline"></ImageView>


                    <EditText
                        android:id="@+id/email_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/email_logo"
                        android:background="@null"
                        android:fontFamily="@font/overpass_regular"
                        android:hint="@string/enter_email_id"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/lightwhite"
                        android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                        android:textSize="@dimen/_12sdp">

                    </EditText>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/branchname_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ifsc_lyt"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginRight="@dimen/_10sdp"

                    android:background="@drawable/bg_btn_border_back"
                    android:backgroundTint="#3A3A3A"
                    android:visibility="visible">
                    <ImageView

                        android:id="@+id/mobileno_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_phonee"
                        android:backgroundTint="@color/headline"></ImageView>
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/mobileno_logo"
                        android:padding="2dp"
                        app:ccpDialog_showNameCode="false"
                        app:ccp_contentColor="@color/white"
                        app:ccp_countryPreference="in,us"
                        app:ccp_hidePhoneCode="true"
                        app:ccp_textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/mobileno_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/ccp"
                        android:background="@null"
                        android:fontFamily="@font/overpass_regular"
                        android:hint="@string/mobile_txt"
                        android:inputType="number"

                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/lightwhite"
                        android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                        android:textSize="@dimen/_12sdp">

                    </EditText>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/message_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/branchname_lyt"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/bg_btn_border_back"
                    android:backgroundTint="#3A3A3A"
                    android:visibility="visible">

                    <EditText

                        android:id="@+id/message_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/overpass_regular"
                        android:hint="Your Message"

                        android:maxLines="3"
                        android:minLines="3"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textAlignment="viewStart"

                        android:textColor="@color/white"
                        android:textColorHint="@color/lightwhite"
                        android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                        android:textSize="@dimen/_12sdp">

                    </EditText>


                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgetpassword_txt"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gradient_history"
                android:fontFamily="@font/overpass_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Submit"
                android:textAlignment="center"

                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"></TextView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorPrimaryDark"
            />


    </RelativeLayout>
</layout>