<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_toStartOf="@+id/add_lyt"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/cryptocurrancy_lyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_btn_border_back">

        <ImageView
            android:id="@+id/cryptocurrancypo_logo"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:backgroundTint="@color/white"></ImageView>

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"

            android:background="@null"
            android:fontFamily="@font/overpass_light"
            android:text="@string/cryptocurrency_method_txt"
            android:textColor="@color/headline"
            android:textColorHint="@color/headline"

            android:textSize="@dimen/_12sdp">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_lyt"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_btn_border_back">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_circle"
            android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/plus"
            android:tint="@color/black"
            tools:ignore="UseAppTint">

        </ImageView>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:visibility="gone"
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/layoutt_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cryptocurrancy_lyt"
        ></androidx.recyclerview.widget.RecyclerView>



    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/address_layout"
        android:layout_below="@+id/layoutt_recy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="visible"
            android:id="@+id/to_tag_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/_5sdp"

            android:fontFamily="@font/overpass_regular"

            android:text="To Address:"

            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"></TextView>

        <TextView
            android:visibility="visible"
            android:id="@+id/to_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_tag_txt"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/overpass_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"></TextView>

        <TextView
            android:visibility="visible"
            android:id="@+id/notess_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_txt"
            android:layout_marginRight="30dp"

            android:layout_marginBottom="5dp"
            android:fontFamily="@font/overpass_regular"

            android:textColor="@color/red"
            android:textSize="@dimen/_10sdp"></TextView>

    </RelativeLayout>



</RelativeLayout>
