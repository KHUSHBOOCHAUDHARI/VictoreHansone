<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity.EmailVerificationActivity">
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/logo"></ImageView>

                <TextView

                    android:id="@+id/getstarted_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:gravity="center"
                    android:text="@string/verifyotpTop_txt"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"></TextView>

                <RelativeLayout
                    android:id="@+id/otp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/getstarted_txt"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/bg_btn_border_back">

                    <ImageView

                        android:id="@+id/otp_logo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/otp"
                        android:backgroundTint="@color/white"></ImageView>

                    <EditText
                        android:maxLength="6"
                        android:id="@+id/otp_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@+id/otp_logo"
                        android:background="@null"
                        android:backgroundTint="@color/transparent"
                        android:fontFamily="@font/overpass_regular"
                        android:hint="@string/enter_otp_id"

                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"

                        android:textColor="@color/white"
                        android:textColorHint="@color/lightwhite"
                        android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                        android:textSize="@dimen/_14sdp"></EditText>
                </RelativeLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:layout_below="@id/otp_layout"
                    android:id="@+id/waiting_layout"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/waiting_txt"

                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:textSize="@dimen/_13sdp"
                        android:textStyle="italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/overpass_italic"
                        android:text="@string/waiting_txt"
                        >  </TextView>
                    <TextView
                        android:id="@+id/waiting_time"

                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:textSize="@dimen/_14sdp"
                        android:textStyle="italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/overpass_italic"
                        android:text=" 00:28"
                        >
                    </TextView>


                </LinearLayout>


                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/termandcondition_lyt"
                    android:layout_below="@+id/waiting_layout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/termandcondition_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/termandcondition_box"
                        android:textSize="@dimen/_11sdp">

                    </TextView>

                    <CheckBox
                        android:id="@+id/termandcondition_box"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:buttonTint="@color/colorPrimaryDark"

                        >

                    </CheckBox>
                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/capitalwithdr_lyt"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/termandcondition_lyt">

                    <TextView
                        android:id="@+id/capitalwithdr_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/capitalwithdr_box"
                        android:textSize="@dimen/_11sdp">

                    </TextView>

                    <CheckBox
                        android:buttonTint="@color/colorPrimaryDark"
                        android:id="@+id/capitalwithdr_box"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"


                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"

                        >

                    </CheckBox>

                </RelativeLayout>

                <TextView
                    android:id="@+id/registration_btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/capitalwithdr_lyt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/gradient_history"
                    android:fontFamily="@font/overpass_regular"
                    android:gravity="center"
                    android:text="@string/registration_now_text"
                    android:textAlignment="center"

                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>



                <LinearLayout

                    android:layout_below="@+id/registration_btn"
                    android:layout_gravity="center"
                    android:id="@+id/donthave_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/overpass_light"
                        android:id="@+id/signuptag_txt"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:text="@string/didnt_receive_code_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/resend_txt"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:text="@string/resend_txt"
                        android:fontFamily="@font/overpass_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>

                </LinearLayout>
                <RelativeLayout
                    android:layout_below="@+id/donthave_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"></RelativeLayout>


            </RelativeLayout>




        </ScrollView>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorPrimaryDark"
            />



    </RelativeLayout>

</RelativeLayout>
</layout>