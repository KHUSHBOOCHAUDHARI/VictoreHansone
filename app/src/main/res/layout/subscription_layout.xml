<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/bg_btn_border_back"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="Mothlty"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp">

    </TextView>

    <TextView
        android:id="@+id/title_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="Plan"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp">

    </TextView>

    <RadioButton
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_15sdp"></RadioButton>


    <RelativeLayout
        android:id="@+id/price_layout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/price_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp">

        </TextView>

        <TextView
            android:id="@+id/price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_toEndOf="@+id/price_tag"
            android:fontFamily="@font/poppins_bold"
            android:text="$5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp">

        </TextView>



    </RelativeLayout>


    <TextView
        android:id="@+id/messgae_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="This is a recurring one month paymentof a small fee."
        android:textColor="@color/textcolor"
        android:textSize="@dimen/_9sdp">

    </TextView>

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messgae_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_history"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"></TextView>


</RelativeLayout>