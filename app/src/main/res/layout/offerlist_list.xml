<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/ic_userPinCardView"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:cardciew="http://schemas.android.com/apk/res-auto"
    cardciew:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/bg_btn_border_back"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_pro"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/historylog" />






        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="10dp"
           android:layout_centerVertical="true"
            android:id="@+id/titlelyt"

            android:layout_toEndOf="@+id/imageView_pro"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"

                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginRight="@dimen/_10sdp"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>






    </RelativeLayout>



</androidx.cardview.widget.CardView>
