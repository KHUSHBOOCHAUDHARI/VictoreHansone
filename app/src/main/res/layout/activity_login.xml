<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Activity.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:background="@drawable/logo"></ImageView>

                    <TextView

                        android:id="@+id/getstarted_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="@string/login_with_youraccount_txt"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18sdp"></TextView>

                    <RelativeLayout
                        android:id="@+id/email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/getstarted_txt"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_btn_border_back">

                        <ImageView

                            android:id="@+id/email_logo"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/email"
                            android:backgroundTint="@color/textcolor"></ImageView>

                        <EditText
                            android:id="@+id/email_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/email_logo"
                            android:background="@null"
                            android:backgroundTint="@color/transparent"
                            android:fontFamily="@font/rubik_regular"
                            android:hint="@string/enter_user_name"
                            android:imeOptions="actionNext"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/textcolor"
                            android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                            android:textSize="@dimen/_14sdp"></EditText>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/password_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_layout"

                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/bg_btn_border_back">

                        <ImageView

                            android:id="@+id/pasword_logo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/password"
                            android:backgroundTint="@color/textcolor"></ImageView>

                        <ImageView
                            android:id="@+id/pasword_visible_logo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/ic_outline_remove_red_eye_24"
                            android:backgroundTint="@color/textcolor"
                            android:visibility="gone"></ImageView>

                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/pasword_invisible_logo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/ic_outline_visibility_off_24"
                            android:backgroundTint="@color/textcolor"></ImageView>

                        <EditText
                            android:id="@+id/password_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_toEndOf="@+id/pasword_logo"
                            android:background="@null"
                            android:backgroundTint="@color/transparent"
                            android:fontFamily="@font/rubik_regular"
                            android:hint="@string/enter_password_txt"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="8"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/textcolor"
                            android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                            android:textSize="@dimen/_14sdp"

                            ></EditText>
                    </RelativeLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/forgetpassword_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/password_layout"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/_15sdp"

                        android:fontFamily="@font/rubik_italic"
                        android:text="@string/forgotepsword_txt"
                        android:textAlignment="center"

                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_14sdp"></TextView>

                    <TextView
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/forgetpassword_txt"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/gradient_history"
                        android:fontFamily="@font/rubik_medium"
                        android:gravity="center"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="@string/login_now_text"
                        android:textAlignment="center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"></TextView>

                    <LinearLayout
                        android:id="@+id/donthave_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_60sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/signuptag_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/donthave_txt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"></TextView>

                        <TextView
                            android:id="@+id/signup_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/rubik_bold"
                            android:text="@string/signup_now_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"></TextView>

                    </LinearLayout>


                </RelativeLayout>


            </ScrollView>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:indeterminateTintMode="src_atop"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>
    </RelativeLayout>
</layout>