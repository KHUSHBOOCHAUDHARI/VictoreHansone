<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Activity.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Skip"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_12sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        ></TextView>


                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/logo"></ImageView>


<RelativeLayout
    android:layout_marginTop="@dimen/_20sdp"
    android:background="@drawable/bg_right_round_back"
    android:layout_below="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"


            android:layout_height="match_parent"
            android:background="@drawable/bg_right_round_back">

            <TextView

                android:id="@+id/getstarted_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="@string/login_to"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"></TextView>

            <RelativeLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/getstarted_txt"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="20dp">

                <ImageView

                    android:id="@+id/email_logo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_user"
                    android:backgroundTint="@color/textcolor"></ImageView>

                <EditText
                    android:id="@+id/email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/email_logo"
                    android:background="@null"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/enter_user_name"
                    android:imeOptions="actionNext"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textcolor"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp"></EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/email_edt"
                    android:background="@color/textcolor"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_layout"

                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp">

                <ImageView

                    android:id="@+id/pasword_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/password"
                    android:backgroundTint="@color/textcolor"></ImageView>

                <ImageView
                    android:id="@+id/pasword_visible_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_outline_remove_red_eye_24"
                    android:backgroundTint="@color/textcolor"
                    android:visibility="gone"></ImageView>

                <ImageView
                    android:id="@+id/pasword_invisible_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_outline_visibility_off_24"
                    android:backgroundTint="@color/textcolor"
                    android:visibility="visible"></ImageView>

                <EditText
                    android:id="@+id/password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_toEndOf="@+id/pasword_logo"
                    android:background="@null"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/enter_password_txt"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="9"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textcolor"
                    android:textCursorDrawable="@drawable/edit_corsor_color_gray"
                    android:textSize="@dimen/_12sdp"

                    ></EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/password_edt"
                    android:background="@color/textcolor"></View>
            </RelativeLayout>

            <TextView

                android:id="@+id/forgetpassword_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_layout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/poppins_italic"

                android:text="@string/forgotepsword_txt"
                android:textAlignment="center"
                android:textColor="@color/textcolor"

                android:textSize="@dimen/_12sdp"
                android:visibility="visible"></TextView>


            <TextView
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgetpassword_txt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_history"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/login_now_text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"></TextView>

            <LinearLayout
                android:id="@+id/donthave_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_btn"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/signuptag_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"

                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12sdp"></TextView>

                <TextView

                    android:id="@+id/signup_txt"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/signup_now_text"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12sdp"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/or_layout"
                    android:layout_above="@+id/relative_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:weightSum="2"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/line_bg"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_or"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/line_bg"
                        android:layout_marginLeft="8dp"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>



                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/relative_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:id="@+id/linear_facbook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <LinearLayout

                            android:id="@+id/linearfacebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/sell_image"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/facebook"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:id="@+id/linear_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_weight="1"
                            android:orientation="vertical"

                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/buttonGoogle"
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/google" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_twit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/orders_image"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/twitter" />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/linear_insta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/linkedin"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/insta" />

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>



            </LinearLayout>



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

                </RelativeLayout>




            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:indeterminateTintMode="src_atop"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>
    </RelativeLayout>
</layout>